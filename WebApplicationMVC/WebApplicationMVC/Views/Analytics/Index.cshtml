
@{

}

<div class="container-fluid">
    <form action="/Analytics/GenerateReport">
        <h5>Вибір дати для звіту по замовленнях</h5>
        <div class="row">
            <div class="col-md-4">
                Початок <input type="text" name="date1" class="form-control datepickerFrom" autocomplete="off" required />
            </div>
            <div class="col-md-4">
                Кінець <input type="text" name="date2" class="form-control datepickerTo " autocomplete="off" required />
            </div>
        </div>
        <div class="row">

            <div class="col-md-8">
                <br />
                <h5>Вибрати виконавців</h5>
                <select name="Performers" class="form-control">
                    <option selected="selected" value="1">Всі виконавці</option>
                    @foreach (var user in Model)
                    {
                        <option value="@user.Id">@user.LastName @user.FirstName @user.MiddleName</option>
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <br />
                <h5>Вибрати джерело замовлення</h5>
                <select name="SourceId" class="form-control">
                    <option selected="selected" value="-1">Всі джерела</option>
                    @foreach (var source in ViewBag.Sources)
                    {
                        <option value="@source.Id">@source.SourceName</option>
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <br />
                <h5>Вибрати тип аналітики</h5>
                <select name="TypeId" class="form-control">
                    <option selected="selected" value="0">Вся інформація</option>
                    @foreach (var type in ViewBag.Types)
                    {
                        <option value="@type.Id">@type.TypeName</option>
                    }
                </select>
            </div>
        </div>
        <hr />
        <button class="btn btn-primary" type="submit" id="GenerateReport">Згенерувати</button>
    </form>
</div>
    @section Analytics{
        <link rel="stylesheet" href="~/Content/analytics.css" />
        <script src="~/Content/analytics.js"></script>
    }
